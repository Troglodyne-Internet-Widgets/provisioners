#!/bin/bash
# Backup Matrix Synapse database

BACKUP_DIR="[% install_dir %]/[% domain %]/backups"
DATE=$(date +%Y%m%d_%H%M%S)
DB_FILE="[% install_dir %]/matrix.[% domain %]/homeserver.db"
BACKUP_FILE="$BACKUP_DIR/synapse_$DATE.db.gz"

mkdir -p "$BACKUP_DIR"

# For SQLite, just copy the db file
cp "$DB_FILE" "$BACKUP_DIR/synapse_$DATE.db"
gzip "$BACKUP_DIR/synapse_$DATE.db"

# Keep only last 7 backups
cd "$BACKUP_DIR" && ls -t synapse_*.db.gz | tail -n +8 | xargs -r rm